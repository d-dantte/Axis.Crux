<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <UsingTask
      TaskName="Axis.Crux.MSBuildTarget.BranchVersioner"
      AssemblyFile="$(MSBuildThisFileDirectory)..\tools\Axis.Crux.MSBuildTarget.dll" />

  <Target Name="BranchVersioner" BeforeTargets="CoreCompile">
    <BranchVersioner ProjectDirectory="$(MSBuildProjectDirectory)" ProjectName="$(MSBuildProjectName)"
                     OutputPath="$(OutputPath)" AssemblyName="$(AssemblyName)" BuildConfiguration="$(Configuration)">
    </BranchVersioner>
  </Target>

</Project>